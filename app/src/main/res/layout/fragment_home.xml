<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="#189AB4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/fragmentHome_TXT_logoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Teamder"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragmentHome_TXT_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Hey *FirstName*\nLets find you a team!"
                android:textColor="@color/white"
                android:textSize="20dp"></com.google.android.material.textview.MaterialTextView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingStart="16dp"
                android:src="@drawable/ic_teamder_logo"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/fragmentHome_leftArrow"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/img_left_arrow" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#B6F4F4"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/teal_200"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix00"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#1890B4"
                        android:orientation="vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture00"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_traveling"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1895B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture01"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_photography"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1890B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture02"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_art"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1895B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture10"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_weddings"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1890B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture11"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_music"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1895B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture12"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_meditation"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/teal_200"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1890B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture20"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_running"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix21"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1895B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture21"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_programming"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragmentHome_matrix22"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#1890B4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/fragmentHome_picture22"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_inspiration"
                            app:shapeAppearanceOverlay="@style/semiRoundedImageView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/fragmentHome_groupName22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textStyle="bold">

                        </com.google.android.material.textview.MaterialTextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/fragmentHome_rightArrow"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/img_right_arrow" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Swipe !">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/createProfileDesc_TXT_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="or"
                android:textColor="@color/white"
                android:textSize="20dp"></com.google.android.material.textview.MaterialTextView>


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surprise Me !">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>