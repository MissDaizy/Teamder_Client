<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#189AB4"
    tools:context=".activities.ViewChosenGroupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewGroup_BTN_editBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit\nGroup"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewGroup_BTN_deleteBTN"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete\nGroup"
                android:textSize="12sp"
                android:drawableLeft="@drawable/ic_delete"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewGroup_IMG_GroupImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawable="@drawable/img_running"
                android:visibility="invisible"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="center|top"
            android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/createProfileDesc_TXT_TeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="TEAM NAME"
                    android:textColor="@color/white"
                    android:textSize="30dp">
                </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/viewGroup_TXT_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Team's Topic is: _____"
                android:textColor="@color/white"
                android:textSize="20dp">

                </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About This Team :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/viewGroup_TXT_groupDesc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:text="HERE IS THE DESCTIPTION"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

                <TextView
                    android:id="@+id/viewGroup_TXT_maxNumOfMembersInTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum number of members is: ___"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team's Interests :"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="30dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/viewGroup_TXT_tags"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:text="HERE IS THE TEAM'S INTERESTS"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewGroup_BTN_exitView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit view"

                    android:textSize="20sp">


                </com.google.android.material.button.MaterialButton>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>






</RelativeLayout>