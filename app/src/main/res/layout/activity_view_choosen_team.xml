<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#189AB4"
    tools:context=".ui.notifications.NotificationsFragment_viewChosen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewGroup_BTN_editBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:text="Edit\nGroup"
                android:textSize="8sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewGroup_BTN_deleteBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:drawableLeft="@drawable/ic_delete"
                android:text="Delete\nGroup"
                android:textSize="8sp"
                android:textStyle="bold"
                android:backgroundTint="#F48880"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/viewGroup_IMG_GroupImage"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:drawable="@drawable/img_running"
                android:visibility="invisible" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/createProfileDesc_TXT_TeamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="TEAM NAME"
                android:textColor="@color/white"
                android:textSize="25dp"></com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/viewGroup_TXT_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Team's Topic is: _____"
                android:textColor="@color/white"
                android:textSize="15dp">

            </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="About This Team :"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/viewGroup_TXT_groupDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/white"
                android:text="HERE IS THE DESCTIPTION"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/viewGroup_TXT_maxNumOfMembersInTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Maximum number of members is: ___"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team's Interests :"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/viewGroup_TXT_tags"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:text="HERE IS THE TEAM'S INTERESTS"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textSize="12sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewGroup_BTN_exitView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit view"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"

                    android:textSize="14sp">


                </com.google.android.material.button.MaterialButton>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>
    </LinearLayout>






</RelativeLayout>